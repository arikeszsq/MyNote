.broadcastList {
  width: 100%;
  height: 50rpx;
}

.broadcastListInde {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 50rpx;
}

.broadcastheadimgurl {
  width: 25rpx;
  height: 25rpx;
