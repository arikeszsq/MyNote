/**authorize.wxss**/
.authorize {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30%;
}

.authorize .authorize-avatar {
  width: 100%;
  height: 20%;
  text-align: center;
}

.authorize .authorize-avatar image {
  border-radius: 100rpx;
}

.authorize .authorize-info {
  width: 100%;
  height: 20%;
  padding-bottom: 5%;
}

.authorize .authorize-info .info-title {
  font-size: 14px;
  text-align: center;
}

.authorize .authorize-info .info-detail {
  font-size: 14px;
  color: #666666;
  text-align: center;
}

.authorize .authorize-btn button{
  background-color: #f84709;
  color: #ffffff;
  size: 200rpx;
}